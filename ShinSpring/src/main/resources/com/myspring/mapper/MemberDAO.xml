<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myspring.mapper.MemberDAO">

	<insert id="createMember">
	insert into member(userid, userpw, username, email) values(#{userid},#{userpw},#{username},#{email})
	</insert>
	
	<select id="memberRead" resultType="com.myspring.domain.MemberVO">
	select * from member where userid=#{userid}
	</select>
	
	<select id="memberList" resultType="com.myspring.domain.MemberVO">
	select * from member</select>

	<update id="updateMember">
		update member
			set userpw = #{userpw},
				username = #{username}
	    where userid = #{userid};
	</update>
	
	<delete id="deleteMember">
		delete from member 
		where userid=#{userid};
	</delete>
	
	<insert id="">
	</insert>
	
</mapper>